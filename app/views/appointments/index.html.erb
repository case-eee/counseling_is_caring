<h1>Student Home Page</h1>
<h2>Welcome, <%= current_user.first_name %>!</h2>

<h2>Upcoming Appointments</h2>
<table>
  <tr>
    <th>Month</th>
    <th>Date</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Counselor</th>
    <th>Cancel Appointment</th>
  </tr>
  <% @appointments.each do |appt| %>
    <tr>
      <td><%= Session.find(appt.session_id).date.month %></td>
      <td><%= Session.find(appt.session_id).date.day %></td>
      <td><%= Session.find(appt.session_id).start_time %></td>
      <td><%= Session.find(appt.session_id).end_time %></td>
      <td><%= User.find(Session.find(appt.session_id).counselor_id).first_name %></td>
      <td><%= link_to 'Cancel', appointment_path(appt),
                method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
<br>

<!-- Past Appointments Link - Iceboxed - link takes us back to this page -->
<div>
  <%= link_to 'Past Appointments', appointments_path %>
</div>

<div>
  <%= link_to 'Book Appointment', book_appointment_path %>
</div>

<div>
  <%= link_to 'Logout', logout_path %>
</div>
