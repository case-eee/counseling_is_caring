<h1>Student Home Page</h1>
<h2>Welcome, <%= current_user.first_name %>!</h2>

<h2>Upcoming Appointments</h2>
<table>
  <tr>
    <th>Month</th>
    <th>Day</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Counselor</th>
    <th>Cancel Appointment</th>
  </tr>

  <% current_user.sessions.each do |session| %>
    <tr>
      <td><%= format_month(session.date) %></td>
      <td><%= session.date.day %></td>
      <td><%= session.start_time %></td>
      <td><%= session.end_time %></td>
      <td><%= session.counselor.first_name %></td>
      <td><%= link_to 'Cancel', appointment_path(session), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <%end%>
</table>

<br>

<!-- Past Appointments Link - Iceboxed - link takes us back to this page -->
<div>
  <%= link_to 'Past Appointments', past_appointment_path %>
</div>

<div>
  <%= link_to 'Book Appointment', book_appointment_path %>
</div>

<div>
  <%= link_to 'Logout', logout_path %>
</div>
