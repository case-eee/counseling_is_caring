<br><div>
  <p>Please login to continue or register as a new user.</p>
</div>

<div class='form-container'>

  <% if @errors %>
    <% @errors.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
  
  <%= form_tag login_path, class: 'login-form',method: :post do %>
    <div>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
  
    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div>
      <%= submit_tag 'Login' %>
    </div>
  <% end %>

  <%= link_to "Register an account", signup_path %>
</div>
